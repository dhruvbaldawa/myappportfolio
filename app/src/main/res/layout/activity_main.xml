<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/appTitle"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/spotifyStreamerTxt"
            android:id="@+id/spotifyStreamerBtn"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="#F08C35"
            android:clickable="true"
            android:onClick="changeColor" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/footballScoresTxt"
            android:id="@+id/footballScoresBtn"
            android:layout_below="@+id/spotifyStreamerBtn"
            android:layout_centerHorizontal="true"
            android:background="#F08C35"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="changeColor" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/libraryTxt"
            android:id="@+id/libraryBtn"
            android:layout_below="@+id/footballScoresBtn"
            android:background="#F08C35"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="changeColor"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/buildItBiggerTxt"
            android:id="@+id/buildItBiggerBtn"
            android:layout_below="@+id/libraryBtn"
            android:layout_centerHorizontal="true"
            android:background="#F08C35"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="changeColor" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/xyzReaderTxt"
            android:id="@+id/xyzReaderBtn"
            android:layout_below="@+id/buildItBiggerBtn"
            android:layout_centerHorizontal="true"
            android:background="#F08C35"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="changeColor" />

        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/capStoneTxt"
            android:id="@+id/capStoneBtn"
            android:layout_below="@+id/xyzReaderBtn"
            android:layout_centerHorizontal="true"
            android:background="#F08C35"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:onClick="changeColor" />
    </RelativeLayout>
</ScrollView>
